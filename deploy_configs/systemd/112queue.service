[Unit]
Description=15-112 Queue
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStart=/usr/bin/docker-compose up --force-recreate
ExecStopPost=/usr/bin/docker stop 112_queue_postgres && /usr/bin/docker stop 112_queue_nodeapp
WorkingDirectory=/root/15-112-Queue
Restart=always

[Install]
WantedBy=multi-user.target
